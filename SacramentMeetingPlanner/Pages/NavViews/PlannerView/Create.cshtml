@page
@model SacramentMeetingPlanner.Pages.NavViews.PlannerView.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Sacrament Meeting Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plans.PlanDate" class="control-label"></label>
                <input asp-for="Plans.PlanDate" class="form-control" />
                <span asp-validation-for="Plans.PlanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plans.Role.RoleTypeName" class="control-label">Conducting</label>
                <select asp-for="Plans.Role.RoleTypeName" class="form-control" asp-items="@Model.RoleNameSL">
                    <option value="">-- Select Bishopric Member --</option>
                </select>
                <span asp-validation-for="Plans.Role.RoleTypeName" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SongToPlan" class="control-label">Opening Hymn</label>
                <select asp-for="Plans.SongToPlan" class="form-control" asp-items="@Model.SongNameSL">
                    <option value="">-- Select Opening Hymn --</option>
                    @*@foreach (var song in Model.AssignedSongDataList)
                    {
                        <option value="@song.Song.SongID">@song.Song.SongName</option>
                    }*@
                </select>
                <span asp-validation-for="Plans.SongToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.PrayerToPlan" class="control-label">Opening Prayer</label>
                <select asp-for="Plans.PrayerToPlan" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Plans.PrayerToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SongToPlan" class="control-label">Sacrament Hymn</label>
                <select asp-for="Plans.SongToPlan" class="form-control" asp-items="@Model.SongNameSL">
                    <option value="">-- Select Sacrament Hymn --</option>
                </select>
                <span asp-validation-for="Plans.SongToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SpeakToPlan" class="control-label">First Speaker</label>
                <select asp-for="Plans.SpeakToPlan" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Plans.SpeakToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SpeakToPlan" class="control-label">Second Speaker</label>
                <select asp-for="Plans.SpeakToPlan" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Plans.SpeakToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SongToPlan" class="control-label">Intermediate Hymn (optional)</label>
                <select asp-for="Plans.SongToPlan" class="form-control" asp-items="@Model.SongNameSL">
                    <option value="">-- Select Intermediate Hymn --</option>
                </select>
                <span asp-validation-for="Plans.SongToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SpeakToPlan" class="control-label">Third Speaker</label>
                <select asp-for="Plans.SpeakToPlan" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Plans.SpeakToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SpeakToPlan" class="control-label">Fourth Speaker</label>
                <select asp-for="Plans.SpeakToPlan" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Plans.SpeakToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.SongToPlan" class="control-label">Closing Hymn</label>
                <select asp-for="Plans.SongToPlan" class="form-control" asp-items="@Model.SongNameSL">
                    <option value="">-- Select Closing Hymn --</option>
                </select>
                <span asp-validation-for="Plans.SongToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Plans.PrayerToPlan" class="control-label">Closing Prayer</label>
                <select asp-for="Plans.PrayerToPlan" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Plans.PrayerToPlan" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
