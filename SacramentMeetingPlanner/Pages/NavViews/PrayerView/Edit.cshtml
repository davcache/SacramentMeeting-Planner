@*Prayer view Edit*@
@page
@model SacramentMeetingPlanner.Pages.NavViews.PrayerView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Prayer Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Prayer.PrayerID" />
            <div class="form-group">
                <label asp-for="Prayer.PrayerTypeID" class="control-label"></label>
                <select asp-for="Prayer.PrayerTypeID" class="form-control" asp-items="ViewBag.PrayerTypeID"></select>
                <span asp-validation-for="Prayer.PrayerTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.MemberID" class="control-label"></label>
                <select asp-for="Prayer.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                <span asp-validation-for="Prayer.MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
