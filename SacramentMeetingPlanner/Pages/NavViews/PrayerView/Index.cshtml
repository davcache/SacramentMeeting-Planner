@page
@model SacramentMeetingPlanner.Pages.NavViews.PrayerView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Prayer Type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayer[0].Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prayer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrayerType.PrayerTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.MemberName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PrayerID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PrayerID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PrayerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
