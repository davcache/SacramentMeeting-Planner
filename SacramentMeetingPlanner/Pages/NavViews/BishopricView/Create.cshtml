@page
@model SacramentMeetingPlanner.Pages.NavViews.BishopricView.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Bishopric</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bishopric.Name" class="control-label"></label>
                @*<select asp-for="Bishopric.Role" class="form-control" asp-items="@Model.DepartmentNameSL">*@
                <select asp-for="Bishopric.Name" class="form-control" asp-items="@Model.MemberNameSL">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Bishopric.Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Bishopric.Role" class="control-label"></label>
                @*<select asp-for="Bishopric.Role" class="form-control" asp-items="@Model.DepartmentNameSL">*@
                <select asp-for="Bishopric.Role" class="form-control" asp-items="@Model.RoleNameSL">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="Bishopric.Role" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Bishopric.ReleasedFlag" class="control-label"></label>
                <input asp-for="Bishopric.ReleasedFlag" class="form-control" />
                <span asp-validation-for="Bishopric.ReleasedFlag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
