@page
@model SacramentMeetingPlanner.Pages.NavViews.SubjectsView.IndexModel

@{
    ViewData["Title"] = "Talk Subjects";
}

<h2>Talk Subjects</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].SubjectName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subjects) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubjectID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubjectID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubjectID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
