@*Song assign view Edit*@
@page
@model SacramentMeetingPlanner.Pages.NavViews.SongAssignmentView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Song Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongAssignment.SongAssignmentID" />
            <div class="form-group">
                <label asp-for="SongAssignment.SongID" class="control-label"></label>
                <select asp-for="SongAssignment.SongID" class="form-control" asp-items="ViewBag.SongID"></select>
                <span asp-validation-for="SongAssignment.SongID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongAssignment.SongTypeID" class="control-label"></label>
                <select asp-for="SongAssignment.SongTypeID" class="form-control" asp-items="ViewBag.SongTypeID"></select>
                <span asp-validation-for="SongAssignment.SongTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
