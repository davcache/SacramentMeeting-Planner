@*Song view Index*@
@page
@model SacramentMeetingPlanner.Pages.NavViews.SongsView.IndexModel

@{
    ViewData["Title"] = "Songs";
}

<h2>Songs</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].SongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].SongNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Songs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SongName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SongNumber)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.SongID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.SongID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.SongID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>