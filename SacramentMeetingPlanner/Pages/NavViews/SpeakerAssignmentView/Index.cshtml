@*Speaker view Index*@
@page
@model SacramentMeetingPlanner.Pages.NavViews.SpeakerAssignmentView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Speaker Assignments</h2>

<p>
    <a asp-page="Create">Create New Speaker Assignment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpeakAssignment[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeakAssignment[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeakAssignment[0].SpeakerPlacement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SpeakAssignment)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.MemberName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpeakerPlacement)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.SpeakAssignmentID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.SpeakAssignmentID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.SpeakAssignmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
